{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
    'py-12',
    'bg-v-light-bg',
    'bg-footer-texture',
  ]
%}
{% if content %}
  <footer{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="relative border-t-2 border-b-2 border-l-2 border-r-2 border-white lg:border-b-0">
        <div class="grid grid-cols-1 gap-12 mx-12 my-12 xl:mx-24 md:grid-cols-2">
          {{ content }}
        </div>


        <div class="mx-12">
            <img class="mx-auto" src="/themes/egs_tw/images/house-drawing.svg" alt="" />
          </div>

          <div>
            <img
              src="/themes/egs_tw/images/egs-logo.svg"
              alt="El gran sueño logo"
              class="mx-auto mt-6 lg:-mb-6"
            />
          </div>

          <!-- svg line -->
          <svg
            id="bottom-line"
            class="invisible lg:visible"
            xmlns="http://www.w3.org/2000/svg"
            width="100%"
            height="2"
            viewBox="0 0 1536 2"
          >
            <line
              x1="39%"
              y1="1"
              y2="1"
              fill="none"
              stroke="#fff"
              stroke-miterlimit="10"
              stroke-width="2"
              vector-effect="non-scaling-stroke"
            />
            <line
              x1="61%"
              y1="1"
              x2="100%"
              y2="1"
              fill="none"
              stroke="#fff"
              stroke-miterlimit="10"
              stroke-width="2"
              vector-effect="non-scaling-stroke"
            />
          </svg>
      </div>
    </div>
    
    <div class="container flex justify-between">
      <div class="my-4">
        {{ drupal_entity('block_content', '24') }}
      </div>
      <div class="my-4">©2022 el gran sueño
      </div>
    </div>

  </footer>
{% endif %}
